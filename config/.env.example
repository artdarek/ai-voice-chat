# LLM provider selection (openai or azure)
DEFAULT_LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_REALTIME_MODEL=gpt-realtime-mini-2025-12-15
OPENAI_REALTIME_BASE_URL=wss://api.openai.com/v1/realtime
OPENAI_TRANSCRIPTION_MODEL=whisper-1

# Azure OpenAI Realtime
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_REALTIME_ENDPOINT=wss://your-resource.openai.azure.com/openai/realtime
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime
AZURE_OPENAI_REALTIME_API_VERSION=2025-04-01-preview
AZURE_OPENAI_TRANSCRIPTION_MODEL=whisper-1

# Gemini key can be stored for future runtime support
GEMINI_API_KEY=...

# Chat system prompt
CHAT_SYSTEM_PROMPT=You are a friendly and polite assistant. Be warm, helpful, and concise in your responses.

# Remote deployment
REMOTE_USER=username
REMOTE_HOST=your-server.example.com
REMOTE_PORT=22
REMOTE_WWW_PATH=/var/www/aichat
REMOTE_TMP_PATH=/root/tmp
REMOTE_ARTIFACT_DIR=www-artifact-aichat
